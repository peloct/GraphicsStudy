<UserControl x:Class="GraphicsStudy.UI.SceneViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphicsStudy.UI"
             xmlns:opentk="clr-namespace:OpenTK;assembly=OpenTK.GLControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <WindowsFormsHost Grid.Column="0">
            <opentk:GLControl x:Name="glControl" Load="GLControl_Load" Resize="GLControl_Resize" Paint="GLControl_Paint"/>
        </WindowsFormsHost>
        <StackPanel Grid.Column="1" Background="White">
            <WrapPanel Orientation="Horizontal">
                <Label>global scale</Label>
                <Slider x:Name="globalScaleSlider" Minimum="0.001" Maximum="10" Width="150" ValueChanged="globalScaleSlider_ValueChanged"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
